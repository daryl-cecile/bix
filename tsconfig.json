{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2019",
		"removeComments": true,
		"preserveConstEnums": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"outDir": "dist",
		"lib": [
			"esnext"
		],
		"inlineSourceMap": true
	},
	"include": [
		"./src/*.ts",
		"./example/*.ts"
	]
}